# =============================================================================
# OCX Python Services - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# Environment variables override config/settings.py defaults
# =============================================================================

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=8000
HOST=0.0.0.0
OCX_ENV=development
DEBUG=false
WORKERS=4
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Database - Supabase (Required)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# PostgreSQL Direct (alternative)
DB_BACKEND=supabase
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ocx
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Cache - Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# AI Models
# -----------------------------------------------------------------------------
# vLLM (self-hosted)
VLLM_ENABLED=true
VLLM_BASE_URL=http://localhost:8000
VLLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
VLLM_API_KEY=EMPTY

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo

# Google AI
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-2.0-pro

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus

# Model priority (comma-separated)
MODEL_PRIORITY=vllm,openai,google,anthropic

# -----------------------------------------------------------------------------
# Trust Calculation
# -----------------------------------------------------------------------------
TRUST_WEIGHT_AUDIT=0.4
TRUST_WEIGHT_REPUTATION=0.3
TRUST_WEIGHT_ATTESTATION=0.2
TRUST_WEIGHT_HISTORY=0.1
MIN_TRUST_SCORE=0.3
QUARANTINE_THRESHOLD=0.2
SESSION_EXPIRY_MINUTES=5

# -----------------------------------------------------------------------------
# Governance
# -----------------------------------------------------------------------------
COMMITTEE_SIZE=22
QUORUM_PERCENTAGE=0.67
VOTING_PERIOD_HOURS=168

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
ENTROPY_THRESHOLD=0.85
LATENCY_ALERT_MS=200
ENABLE_LIVE_STREAM=true

# -----------------------------------------------------------------------------
# Service URLs (for internal communication)
# -----------------------------------------------------------------------------
TRUST_REGISTRY_URL=http://localhost:8000
JURY_SERVICE_URL=http://localhost:8001
OCX_GATEWAY_URL=http://localhost:8002
ACTIVITY_REGISTRY_URL=http://localhost:8003
EVIDENCE_VAULT_URL=http://localhost:8004
AUTHORITY_URL=http://localhost:8005
