root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.{yaml,yml,json,toml}]
indent_style = space
indent_size = 2

[*.{sql,proto}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Dockerfile*]
indent_style = space
indent_size = 4
